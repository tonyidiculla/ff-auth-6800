# Environment Configuration for Furfield Auth Service
NEXTAUTH_URL=http://localhost:6800
NEXTAUTH_SECRET=your-super-secret-key-here-change-in-production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Database Configuration (Supabase)
DATABASE_URL=your-database-url-here
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (for password reset)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@furfield.com

# Service Configuration
SERVICE_API_KEY=furfield-internal-api-key-change-in-production

# CORS Origins (for microservices)
ALLOWED_ORIGINS=http://localhost:6810,http://localhost:6820,http://localhost:6830,http://localhost:6840,http://localhost:6850,http://localhost:6860,http://localhost:6870,http://localhost:6899